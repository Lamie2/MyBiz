@model Portfolio
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">

        <div class="col-md-10 mx-auto border-dark">
            <form asp-action="create" method="post" enctype="multipart/form-data">
                <div class=" mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
                <div class=" mb-3">
                    <label asp-for="Subtitle" class="form-label">Order</label>
                    <input asp-for="Subtitle" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Subtitle"></span>
                </div>
                <div class=" mb-3">
                    <input asp-for="ImageFile" />
                    <span class="text-danger" asp-validation-for="ImageFile"></span>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>


